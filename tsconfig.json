{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "types",
    "skipLibCheck": true,
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "types"
  ],
  "include": [
    "src/**/*"
  ]
}
